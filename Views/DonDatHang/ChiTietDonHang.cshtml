@model IEnumerable<NguyenChiTrung_ShopYAME.Models.CHITIETDONDATHANG>
@{
    ViewBag.Title = "ChiTietDonHang";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h2 class="col-lg-12" style="margin-left:170px;">Đơn hàng</h2>@foreach (var kinh in Model)
{
    <h5 class="col-lg-12" style="margin-left:170px;">Ngày đặt @kinh.DONDATHANG.NgayDat </h5>
}
<section class="shoping-cart spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="shoping__cart__table">
                    <table>
                        <thead>
                            <tr>
                                <th class="shoping__product">Sản Phẩm </th>
                                <th>Mã </th>
                                <th>Đơn giá</th>
                                <th>Số lượng</th>
                                <th>Thành tiền</th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var kinh in Model)
                            {
                                <tr>
                                    <td class="shoping__cart__item">
                                        <img src="~/img/featured/@kinh.SANPHAM.AnhBia" alt="" style="width:100px;">
                                        <h5>@kinh.SANPHAM.TenSanPham</h5>
                                    </td>
                                    <td>
                                        @kinh.MaSanPham
                                    </td>
                                    <td class="shoping__cart__price">
                                        @string.Format("{0:#,##0,0}", @kinh.DonGia)
                                    </td>
                                    <td class="shoping__cart__quantity">
                                        @kinh.SoLuong
                                    </td>
                                    <td class="shoping__cart__total">
                                        @string.Format("{0:#,##0,0}", (kinh.DonGia * kinh.SoLuong))
                                    </td>
                                </tr>
                            }
                            <tr>
                            </tr>
                        </tbody>
                    </table>

                </div>
            </div>
            <div class="col-lg-5">
                <div class="shoping__checkout">
                    <h4>Địa chỉ thanh toán</h4>
                    <hr />
                    @Html.Action("KhachHang", "DonDatHang")
                </div>
            </div>
            <div class="col-lg-5">
                <div class="shoping__checkout">
                    <h4>Địa chỉ nhận hàng</h4>
                    <hr />
                    @Html.Action("KhachHang", "DonDatHang")
                </div>
            </div>
        </div>
    </div>
</section>


