                            <h4 class="mb-4">
                                1 review for @Model.TenSanPham
                            </h4>
                            <div class="media mb-4">

                                <div class="media-body">
                                    @Html.Action("HienThiComment", "Home", new
                               {
                                   id =
Model.MaSanPham
                               })
                                </div>
                            </div>
                        </div>*@
                        @*<div class="col-md-6">*@
                            @*<h4 class="mb-4">MỜI REVIEW</h4>
                            <small>BÌNH LUẬN CỦA BẠN SẼ GIÚP ÍCH CHO CHÚNG TÔI</small>
                            <div class="d-flex my-3">
                            </div>*@
                            @*@Html.Action("Comment", "Home")*@




                            <div class="fb-comments" data-href="http://tin.vn" data-colorscheme="light"
                                 data-numposts="5" data-width="100%"></div>

                          @*</div>*@
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


