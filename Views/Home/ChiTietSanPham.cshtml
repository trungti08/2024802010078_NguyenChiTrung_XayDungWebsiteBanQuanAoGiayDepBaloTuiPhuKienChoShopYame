})

                </div>
                <div class="tab-pane fade" id="tab-pane-2">
                    <h4 class="mb-3">THÔNG TIN SẢN PHẨM</h4>
                    <div class="motasach">
                        <p>
                            @Html.Raw(
                           @Model.MoTa.ToString().Replace("\n", "</p><p>&nbsp&nbsp&nbsp&nbsp&nbsp")
                           )
                        </p>
                    </div>
                </div>
