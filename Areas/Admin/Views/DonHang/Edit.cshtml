@model NguyenChiTrung_ShopYAME.Models.DONDATHANG

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>DONDATHANG</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label class="control-label col-md-2">Mã đơn hàng:</label>
        <div class="col-md-10">
            @*Chỉ hiển thị mã sách không cho sửa*@
            <input type="text" size="70" name="sMaDonHang" value="@Model.MaDonHang" readonly />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Đã thanh toán:</label>
        <div class="col-md-10">
            @Html.TextBox("sDaThanhToan")
        </div>
    </div>


    <div class="form-group">
        <label class="control-label col-md-2">Tình trạng giao hàng: </label>
        <div class="col-md-10">
            <input type="number" min="1" required name="sTinhTrangGiaoHang" value="@Model.TinhTrangGiaoHang" />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Ngày đặt: </label>
        <div class="col-md-10">
            <input type="datetime" name="sNgayDat" required
                   value="@Convert.ToDateTime(Model.NgayDat)" />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Ngày giao: </label>
        <div class="col-md-10">
            <input type="datetime" name="sNgayGiao" required
                   value="@Convert.ToDateTime(Model.NgayGiao)" />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Mã khách hàng: </label>
        <div class="col-md-10">
            @Html.DropDownList("MaKhachHang")
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
