@model NguyenChiTrung_ShopYAME.Models.DONDATHANG

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm("Create", "DonHang"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>DONDATHANG</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Đã thanh toán:</label>
            <div class="col-md-10">
                <input type="text" size="70" name="sDaThanhToan" value="@ViewBag.DaThanhToan"
                       required />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Tình trạng giao hàng: </label>
            <div class="col-md-10">
                <input type="number" min="1" required name="sTinhTrangGiaoHang" value="@ViewBag.TinhTrangGiaoHang" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Ngày đặt: </label>
            <div class="col-md-10">
                <input type="date" name="sNgayDat" required />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Ngày giao: </label>
            <div class="col-md-10">
                <input type="date" name="sNgayGiao" required />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Mã khách hàng: </label>
            <div class="col-md-10">
                @Html.DropDownList("MaKhachHang")
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
